@model Telerik.Sitefinity.Frontend.Media.Mvc.Models.DocumentsList.DocumentDetailsViewModel

@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Web.DataResolving;

<div class="@Model.CssClass" role="group">

    <h1>
        @Model.Item.Fields.Title
    </h1>

    <div class="text-muted">
        <span class="sr-only">Published on </span>
        @Model.Item.GetDateTime("PublicationDate", "MMM d, yyyy, HH:mm tt")
        @Html.Resource("By")
        @DataResolver.Resolve(@Model.Item.DataItem, "Author", null)
    </div>

    <div aria-label="Document summary">
        @Model.Item.Fields.Description
    </div>

    <div>
        <a href="@Model.Item.Fields.MediaUrl" target="_blank">Download <span class="sr-only">@Model.Item.Fields.Title</span></a>
        <span aria-label="Document extension">(@Model.Extension)</span>
        <span aria-label="Document size">@(Math.Ceiling((double)Model.Item.Fields.TotalSize / 1024) + " KB")</span>
    </div>    
    
    @{        
        if (Model.EnableSocialSharing)
        {
            var item = Model.Item.DataItem as Telerik.Sitefinity.Model.IHasTitle;
            @Html.SocialShareOptions(item);
        }
    }
</div>