@model Telerik.Sitefinity.Frontend.Media.Mvc.Models.Document.DocumentViewModel

<div class="@Model.CssClass">
    @if(!string.IsNullOrEmpty(Model.MediaUrl))
    {
        <div>
          <i>
              <span>@Model.Extension</span>
          </i>
        </div>
        <div>
            <div>
              <a href="@Model.MediaUrl">@Model.Title</a>
              <br>
              <span>(@Model.Extension)</span>
            </div>
          <span>@Model.FileSize KB</span>
        </div>
    }
</div>
